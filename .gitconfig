[user]
	email = daniel@apatin.ru
	name = Daniel Apatin
[url "git@github.com:"]
	insteadOf = https://github.com/
[help]
	autocorrect = 1
[core]
	excludesfile = ~/.gitignore_global
	editor = nano
[init]
	defaultBranch = main
[color]
	ui = auto
[color "branch"]
	current = yellow bold
	local = green bold
	remote = cyan bold
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	added = green bold
	changed = yellow bold
	untracked = red bold
[github]
	user = ad
